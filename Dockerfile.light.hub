FROM alpine:3.19
LABEL maintainer="Victor Castell <0x@vcastellm.xyz>"

RUN set -x \
	&& buildDeps='bash ca-certificates openssl tzdata' \
	&& apk add --no-cache --update $buildDeps

EXPOSE 8080 8946

ENV SHELL /bin/bash
COPY dkron /usr/local/bin/

ENTRYPOINT ["/usr/local/bin/dkron"]

CMD ["--help"]
